<html>

  <head>
    <title> Todototry 's   Online Book  Store   </title> 
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
  </head>
  
  <body id="store">
    <div id="banner">
      <%= image_tag("logo.png")%>
      <%=  I18n.t 'layout.title' %>
      
        <%= form_tag '', :method => 'GET', :class => 'locale' do %>
          <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit()'  %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
      <% end %>

    </div>


    <div id="columns">
      

      <div id="side">

        <div id="cart">
          <%= render(:partial => "cart" , :object => @cart) %>
        </div>
      
        <a href="/"><%= I18n.t 'layout.side.home' %></a><br />
        <a href="/faq"><%= I18n.t 'layout.side.question' %></a><br />
        <a href="/news"><%= I18n.t 'layout.side.news' %><br />
        <a href="/contact"><%= I18n.t 'layout.side.contact' %></a><br />

      </div>

    <div id="main">
      <% if flash[:notice] -%>
   
        <div id="notice"> 
          
         * <%= flash[:notice] %>
       
        </div>
      <% end -%>
      <%= yield %>
    </div>
  </div>

  </body>



</html>
  
